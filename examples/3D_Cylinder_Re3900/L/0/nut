FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 1e-10;

boundaryField
{
    periodic_p
    {
        type            cyclic;
    }

    periodic_m
    {
        type            cyclic;
    }
    Cylinder
    {
         type            fixedValue;
         value           uniform 1e-10;
    }

    Outlet
    {
        type            zeroGradient;
    }

    Inlet
    {
        type            zeroGradient;
    }

}


